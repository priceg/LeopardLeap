<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_custom_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_shape"
    android:padding="2dp">

    <ImageButton
        android:id="@+id/close"
        android:layout_width="43dp"
        android:layout_height="48dp"
        android:layout_alignTop="@+id/title"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-32dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@android:drawable/ic_delete" />

    <TextView
        android:id="@+id/blurb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="303dp"
        android:fontFamily="georgia"
        android:padding="25sp"
        android:text="@string/blurb"
        android:textColor="#000000"
        android:textSize="13sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/directions"
        android:layout_width="127dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="151dp"
        android:layout_marginTop="505dp"
        android:background="@drawable/my_button_bg"
        android:fontFamily="georgia"
        android:text="@string/directions" />

    <ImageView
        android:id="@+id/picture"
        android:layout_width="283dp"
        android:layout_height="231dp"
        android:layout_above="@+id/blurb"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-316dp"
        android:src="@drawable/leopard_statue" />

    <TextView
        android:id="@+id/title"
        android:layout_width="285dp"
        android:layout_height="31dp"
        android:layout_above="@+id/picture"
        android:layout_alignStart="@+id/picture"
        android:layout_alignEnd="@+id/picture"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="-8dp"
        android:layout_marginBottom="0dp"
        android:fontFamily="georgia"
        android:text="@string/title"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold|italic" />

</RelativeLayout>